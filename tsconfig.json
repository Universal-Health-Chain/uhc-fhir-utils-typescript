{
  "compilerOptions": {
    "lib": ["es2016"],
    "target": "es2016",
    "module": "commonjs",
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck":true,
    "outDir": "./lib",
    "strict": true,
    "typeRoots": [ "./types", "./node_modules/@types"]   
  },
  "include": ["./src"],
  "exclude": ["./lib","node_modules", "**/__tests__/*", "**/test/*",  "*.test.ts"]
}