{
  "compilerOptions": {
    "lib": ["ES2015", "dom"],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src"],
  "exclude": ["./lib", "node_modules", "**/__tests__/*", "**/test/*", "*.test.ts"]
}
